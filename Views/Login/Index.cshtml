
@{
    ViewBag.Title = "Login";
}

<section class="container">
    <form id="FrmLogin" class="col-sm-12 col-md-8 col-lg-6 m-auto">
        <h1>Iniciar sesión</h1>

        <div class="form-group">
            <label>Usuario</label>
            <input id="usuario" name="usuario" type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input id="contrasena" name="contrasena" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
</section>

@section scripts{
    <script>
        $(document).ready(function () {
            // al hacer submit (enviar) el formulario
            $("#FrmLogin").submit(function (e) {
                e.preventDefault(); // detenemos el envio

                // nombre de la url/metodo que tiene
                var url = '@Url.Content("~/Login/Entrar")';

                // los datos del formulario
                var parametros = $(this).serialize();

                $.post(url, parametros, function (data) {
                    if (data == "true") {
                        document.location.href = '@Url.Content("~/")';
                    } else {
                        alert("Credenciales incorrectas");
                    }                    
                });
            });
        });
    </script>
}
